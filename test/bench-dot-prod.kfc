;; Dense dot product between two vectors.

(%testspec
 (%tags bench))

(module
    (import rt)
    
  (extern nanotime () -> u64)
    
  ;;(define (dot X Y)
  ;;  (vector-ref
  ;;   (kernel ((_ (iota 1)))
  ;;     (reduce + (kernel ((x X) (y Y))
  ;;                 (* x y))))
  ;;   0))

  (define (dot X Y)
    (reduce + (kernel ((x X) (y Y))
                (* x y))))
  
  (define (do-dot X Y)
    (for (i 0 10)
      (let ((start (nanotime)))
        (dot X Y)
        (let ((stop (nanotime)))
          (println* "    - " (elapsed-sec start stop))))))
  
  (define (bench_length len)
    (let ((X (make-vector len 1.0))
          (Y (make-vector len 1.0)))
      (println* "  - vector_size: " len)
      (println* "    total_time:")
      (do-dot X Y)
      0))
  
  (define (main)
    (println* "name: harlan-dmm")
    (println* "device_type: " (match (rt-device-type)
                                ((CPU) "cpu")
                                ((GPU) "gpu")))
    (for (i 1 135 2)
    ;;(for (i 1 21)
      (bench_length (* i 1000000)))
    0))

